# EditorConfig helps developers define and maintain consistent coding styles
# for different editors and IDEs. For more details, visit editorconfig.org

# Top-most EditorConfig file
root = true

# Use Unix-style line endings
[*]
end_of_line = lf

# Set the character encoding to UTF-8
[*.{js,jsx,ts,tsx,html,css,scss,json,yaml}]
charset = utf-8

# Indentation and spacing
[*.{js,jsx,ts,tsx,html,css,scss}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript and TypeScript specific settings
[*.{js,jsx,ts,tsx}]
max_line_length = off
quote_type = single
allow_single_line_explicit_type = true
no_unused_vars = true

# HTML specific settings
[*.html]
indent_size = 2

# CSS and SCSS specific settings
[*.{css,scss}]
indent_size = 2

# JSON specific settings
[*.json]
indent_size = 2

# YAML specific settings
[*.yaml]
indent_size = 2
